<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_collapseParallaxMultiplier="1.0"
    android:background="@color/colorBackground"
    tools:context="com.baucua.Game">


    <LinearLayout
        android:id="@+id/MainLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="false"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/bg2"
        android:orientation="vertical"
        android:theme="@style/AppTheme"
        android:weightSum="1">

        <RelativeLayout
            android:id="@+id/plate"
            android:layout_width="wrap_content"
            android:layout_height="266dp"
            android:layout_marginStart="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/plate">


            <ImageView
                android:id="@+id/item2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="120dp"
                android:layout_marginTop="28dp"
                app:srcCompat="@drawable/item1" />

            <ImageView
                android:id="@+id/item1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginStart="180dp"
                android:layout_marginTop="70dp"
                android:layout_marginEnd="0dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/item0" />

            <ImageView
                android:id="@+id/item3"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="35dp"
                android:layout_marginEnd="0dp"
                android:layout_marginStart="90dp"
                android:accessibilityLiveRegion="none"
                app:srcCompat="@drawable/item2" />

            <ImageView
                android:id="@+id/imgChen"
                android:layout_width="340dp"
                android:layout_height="340dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="0dp"
                android:layout_marginEnd="0dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp"
                android:paddingBottom="0dp"
                android:paddingEnd="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:paddingStart="0dp"
                android:paddingTop="0dp"
                app:srcCompat="@drawable/chen" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/buttonGroup"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <ImageView
                android:id="@+id/btnOpen"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginBottom="0dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="0dp"
                app:srcCompat="@drawable/btnopen" />

            <ImageView
                android:id="@+id/btnPlay"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginStart="130dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                app:srcCompat="@drawable/btnplay" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bangame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bgwhite">

            <ImageView
                android:id="@+id/itemWin1"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="15dp"
                app:srcCompat="@drawable/itemshow1" />

            <ImageView
                android:id="@+id/itemWin2"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignTop="@+id/itemWin1"
                android:layout_toEndOf="@+id/itemWin1"
                app:srcCompat="@drawable/itemshow1" />

            <ImageView
                android:id="@+id/itemWin3"
                android:layout_width="110dp"
                android:layout_height="110dp"
                android:layout_alignTop="@+id/itemWin2"
                android:layout_toEndOf="@+id/itemWin2"
                app:srcCompat="@drawable/itemshow1" />

            <ImageView
                android:id="@+id/itemGame0"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="10dp"
                app:srcCompat="@drawable/itemshow0" />

            <ImageView
                android:id="@+id/itemGame1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentTop="true"
                android:layout_marginStart="17dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="-1dp"
                android:layout_toStartOf="@+id/itemGame2"
                android:layout_toEndOf="@+id/itemGame0"
                app:srcCompat="@drawable/itemshow1" />

            <ImageView
                android:id="@+id/itemGame2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_above="@+id/itemWin3"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/itemshow2" />

            <ImageView
                android:id="@+id/itemGame3"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentStart="true"
                android:layout_marginTop="140dp"
                app:srcCompat="@drawable/itemshow3" />

            <ImageView
                android:id="@+id/itemGame4"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="140dp"
                app:srcCompat="@drawable/itemshow4" />

            <ImageView
                android:id="@+id/itemGame5"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentEnd="false"
                android:layout_marginStart="240dp"
                android:layout_marginTop="140dp"
                app:srcCompat="@drawable/itemshow5" />
        </RelativeLayout>

    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
